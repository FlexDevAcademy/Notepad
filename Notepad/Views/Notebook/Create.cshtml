@model Note

@{
    ViewBag.Title = "Create";
}

<h2>Create new Note</h2>
<hr />

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        @Html.ValidationSummary(true, "", new {@class = "text-danger"})
        @Html.HiddenFor(model => model.Id)

        <div class="form-group mb-3">
            <h4>Enter title:</h4>
            <div class="col-md-10">
                @Html.TextBoxFor(model => model.Title, new {@class = "form-control validate"})
                @Html.ValidationMessageFor(model => model.Title, "", new {@class = "text-danger"})
            </div>
        </div>

        <div class="form-group mb-3">
            <h4>Enter content:</h4>
            <div class="col-md-10">
                @Html.TextAreaFor(model => model.Content, new {@class = "form-control content-view align-text-top validate"})
                @Html.ValidationMessageFor(model => model.Content, "", new {@class = "text-danger"})
            </div>
        </div>

        <div class="form-group my-3">
            
            <input type="submit" value="Save" class="btn btn-primary" id="SaveButtonCreate" disabled="disabled" />
        </div>
    </div>
}

